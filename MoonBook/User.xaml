<Grid x:Class="MoonBook.User"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MoonBook"
      mc:Ignorable="d">
    <Ellipse x:Name="Photo" HorizontalAlignment="Left" Height="40" Margin="6,0,0,0" Stroke="Black" VerticalAlignment="Center" Width="40"/>
    <TextBlock x:Name="Name" HorizontalAlignment="Left" Margin="60,0,0,0" TextWrapping="Wrap"  VerticalAlignment="Center" Height="20" FontSize="14" FontWeight="Bold"/>
    <Ellipse x:Name="Online" HorizontalAlignment="Left" Height="14" Margin="31,24,0,0" Stroke="Black" VerticalAlignment="Top" Width="15">
        <Ellipse.Fill>
            <ImageBrush/>
        </Ellipse.Fill>
    </Ellipse>
    <Button x:Name="Follow" Click="Follow_Click" HorizontalAlignment="Right" Margin="250,0,10,0" VerticalAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}" Width="20" Height="20"/>
</Grid>


<Grid x:Class="MoonBook.BookItem"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MoonBook"
      mc:Ignorable="d">
    <Rectangle Width="40" Height="55" x:Name="Cover" HorizontalAlignment="Left" VerticalAlignment="Center">
        <Rectangle.Fill>
            <ImageBrush ImageSource="/img/local_library_FILL0_wght500_GRAD0_opsz48.png"/>
        </Rectangle.Fill>
    </Rectangle>
    <TextBlock x:Name="Name" Margin="52,24,127,25" FontWeight="Bold"/>
    <Button  x:Name="DeleteBook" HorizontalAlignment="Left" Margin="167,0,0,0" VerticalAlignment="Top" Width="12" Height="12" BorderBrush="{x:Null}" Click="DeleteBook_Click">
        <Button.Background>
            <ImageBrush ImageSource="/img/delete_FILL0_wght400_GRAD0_opsz48.png"/>
        </Button.Background>
    </Button>
</Grid>
